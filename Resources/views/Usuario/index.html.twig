{% extends 'SedaBundle::layout.html.twig' %}



{% block contenido %}
<div class="row">
	<table id="tabla-usuarios" class="table table-striped">
		<thead>
			<tr>
				<th>Usuario</th>
				{#
				<th>Nombre</th>
				<th>Apellido</th>
				#}
				<th>Cedula</th>
				{#
				<th>Cargo</th>
				<th>Nivel</th>
				#}
				<th>Dependencia</th>
				<th>Supervisior</th>
				<th>Supervisa a:</th>
				<th>Activo</th>
				<th>Roles</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			{% for usuario in usuarios %}
				<tr>
					<td>{{ usuario.username }}</td>
					{#
					<td>{{ usuario.nombres }}</td>
					<td>{{ usuario.apellidos }}</td>
					#}
					<td>{{ usuario.cedula }}</td>
					{#
					<td>{{ usuario.cargo }}</td>
					<td>{{ usuario.nivel }}</td>
					#}
					<td>{{ usuario.dependencia }}</td>
					{% if usuario.supervisor == 0 %}
						<td align="center">No</td>
					{% else %}
						<td align="center">Si</td>
					{% endif %}
					<td>{{ usuario.supervisa }}</td>
					{% if usuario.isActive == 0 %}
						<td align="center">No</td>
					{% else %}
						<td align="center">Si</td>
					{% endif %}
					<td>
						{% for rol in usuario.roles %}
							{{ rol.name }}
						{% else %}
							N/A	
						{% endfor %}
					</td>
					<td>
						<a href="{{ path('usuario_editar', { 'usuario_id': usuario.id }) }}" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true" ></span></a></br>
						<a href="{{ path('usuario_clave', { 'usuario_id': usuario.id }) }}"  title="Editar ContraseÃ±a">
						<span class="glyphicon glyphicon-pencil" aria-hidden="true" >*****</span>
						</a>
					</td>
				</tr>
			{% else %}
			<tr>
			  <td>
			  <h2 >No existen registros de Usuarios</h2>
			  </td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('js/tablas.js') }}"></script>
{% endblock %}