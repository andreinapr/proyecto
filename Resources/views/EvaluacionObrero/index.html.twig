{% extends 'SedaBundle::layout.html.twig' %}

{% block contenido %}

    {#
    {{ evaluaciones | ld }}
    #}
    <div class="class row">
            <h4 align="center">Listado de Evaluaciones de Eficiencia del Personal Obrero de la {{ usuario.supervisa }} </h4>
    </div>
    <br>
    <div class="row">
        <table id="tabla-lista-evaluacion"class="table table-striped">

            <thead>
                <tr>

                    <th>Funcionario</th>
                    <th>Período</th>
                    <th>Año</th>
                    <th>Evaluación</th>
                </tr>
            </thead>
            <tbody>
                {% for evaluacion in evaluaciones %}
                    <tr>
                        <td align = "center">{{ evaluacion.evaluado }}</td>
                        <td align = "center">
                            {% if evaluacion.periodo == 1 %}
                                1er. Semestre
                            {% endif %}
                            {% if evaluacion.periodo == 2 %}
                                2do. Semestre
                            {% endif %}                     
                        </td>
                        <td align = "center">{{ evaluacion.ano }}</td>
                        <td align = "center">
                                <a href="{{ path('Seda_evaluacionObrero_pdf', { 'id': evaluacion.id }) }}" title="Imprimir"><span class="glyphicon glyphicon-print" aria-hidden="true" ></span></a>
                            {#{% endif %}#}
                        </td>                  
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/tablas.js') }}"></script>
{% endblock %}
