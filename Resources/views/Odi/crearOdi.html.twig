		<div class="row">
			<div class="alert-danger" align= "center">{{ error }}</div>
		</div>
	</br>
	    <div class="row">

		    <div class="form-group">
		    	<div>{{ form_label(formulario.usuario, 'Funcionario') }}</div>	
		        <div>{{ form_widget(formulario.usuario, { 'attr': {'class': 'form-control'} }) }}</div>
			    <div class="alert-danger" align= "center">{{ form_errors(formulario.usuario) }}</div>
		    </div>

		    <div class="form-group">
		    	<div>{{ form_label(formulario.periodo, 'Periodo', { 'attr': {'class': 'radio'}}) }}</div>	
		        {{ form_widget(formulario.periodo, { 'attr': {'class': 'radio'}}) }}
			    <div class="alert-danger" align= "center">{{ form_errors(formulario.periodo) }}</div>        
		    </div>

		    <div class="form-group">
		    	<div>{{ form_label(formulario.ano, 'A침o') }}</div>	
		        <div>{{ form_widget(formulario.ano, { 'attr': {'class': 'form-control'} }) }}</div>
		        <div class="alert-danger" align= "center">{{ form_errors(formulario.ano) }}</div>
		    </div>

		    <div class="form-group">
		    	<div>{{ form_label(formulario.total_pesos, 'Total Pesos') }}</div>
		        <div>{{ form_widget(formulario.total_pesos, { 'attr': {'class': 'form-control', 'readOnly': 1, 'size': '17'} }) }}</div>
			    <div class="alert-danger" align= "center">{{ form_errors(formulario.total_pesos) }}</div>
		    </div>

	    </div>
	    <br>
	    <div class="row">

	    	<table class="table table-striped">
	    		<thead>
	    			<tr>
	    				<th>#</th>
	    				<th>Objetivos</th>
	    				<th>Peso</th>
