{% extends 'SedaBundle::layout.html.twig' %}

{% block contenido %}

{# {{ odis | ld }} #}

<div class="row">
	<div class="alert-danger" align= "center">{{ eliminado }}</div>
</div>
</br>
<div class="row">
			
	<table id="tabla-eliminar-lista" class="table table-striped">

		<thead>
			<tr>
				<th>Funcionario</th>
				<th>Periodo</th>
				<th>Año</th>
				<th>Acción</th>
			</tr>
		</thead>
		<tbody>
			{% for odi in odis %}
				<tr>
					<td align = "center">{{ odi.usuario }}</td>
					<td align = "center">
						{% if odi.periodo == 1 %}
						    1er. Semestre
						{% endif %}
						{% if odi.periodo == 2 %}
						    2do. Semestre
						{% endif %}						
					</td>
					<td align = "center">{{ odi.ano }}</td>
					<td align = "center">
					<a href="{{ path('Seda_odis_eliminar', { 'odi_id': odi.id }) }}"" title="Eliminar"><span class="glyphicon glyphicon-remove" aria-hidden="true" ></span></a>
					</td>					
				</tr>
			{% else %}
			<tr>
			  <td>
			  <h2 >No existen registros de ODIS</h2>
			  </td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	<script type="text/javascript" src="{{ asset('js/tablas.js') }}"></script>
{% endblock %}